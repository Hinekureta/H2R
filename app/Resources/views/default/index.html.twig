{% extends 'base.html.twig' %}


{% block body %}
    <div class="container-fluid fluid-padding">
        <div class="row justify-content-between">
            <div class="col-md-3">
                <div class="row content-block justify-content-center">
                    <div class="row justify-content-center">
                        <h3 class="col-md-10">Chanson du jour : </h3>
                    </div>
                    <div class="row justify-content-center">
                        <iframe src="https://open.spotify.com/embed?uri=spotify:track:4cGeMgLcykDLAazHFpbZbU"
                                width="300" height="80" class="col-md-10" frameborder="0"
                                allowtransparency="true">
                        </iframe>
                    </div>
                </div>

                {#<div class="row content-block justify-content-center">#}
                    {#<div class="row justify-content-center">#}
                        {#<h3 class="col-md-10">Sondage du jour : </h3>#}
                    {#</div>#}
                    {#<div class="row justify-content-center">#}
                        {#<iframe src="http://www.strawpoll.me/embed_1/14019983"#}
                                {#style="width:90%;height:350px;border:0;">Loading poll...</iframe>#}
                    {#</div>#}
                {#</div>#}

                <div class="row justify-content-center mt-5 mb-3">
                    <a class="btn btn-primary col-md-12 index-button"
                       href="{{ path('nba-ipsum-generator') }}">
                        <span class="h4">NBA Ipsum Generator</span>
                    </a>
                </div>
            </div>

            <div class="col-md-8">
                {% for post in posts|reverse %}
                    <div class="content-block">
                        <div class="row justify-content-between mb-4">
                            <div class="col-md-4">
                                <h3 class="h3">
                                    <a href="{{ url('post_detail', {'id' : post.id}) }}">{{ post.title }}</a>
                                </h3>
                            </div>
                            <div class="col-md-2 date-style">
                                {{ post.date | date('d-m-Y') }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-12">{{ post.content | slice(0, 2042) | raw }}</div>
                        </div>
                        {% if post.content | length > 2042 %}
                            <div class="row mt-2">
                                <a class="col-md-3" href="{{ url('post_detail', {'id' : post.id}) }}">Lire la suite...</a>
                            </div>
                        {% endif %}
                    </div>

                    {#<hr>#}
                {% endfor %}
            </div>

        </div>


    </div>
{% endblock %}
{% block javascripts %}
{% endblock %}